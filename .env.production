# Production Environment Variables for Hamravesh Deployment
# Replace values with your actual production settings

# Django Settings
DEBUG=False
SECRET_KEY=your-secure-secret-key-change-this-in-production

# Host Configuration
ALLOWED_HOSTS=your-domain.hamravesh.ir,your-domain.com,www.your-domain.com

# Frontend URL Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.hamravesh.ir,https://your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.hamravesh.ir,https://your-domain.com

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Alternative: For MySQL
# DATABASE_URL=mysql://username:password@hostname:3306/database_name

# Alternative: For SQLite (not recommended for production)
# DATABASE_URL=sqlite:///db.sqlite3

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# API Configuration
API_BASE_URL=https://your-api-domain.hamravesh.ir

# Logging
LOG_LEVEL=INFO
