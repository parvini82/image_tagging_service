# ============================================
# Django Backend Configuration
# ============================================
DEBUG=False
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================
# Database Configuration - PostgreSQL ONLY
# ============================================
# PostgreSQL Connection String (production-ready)
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/image_tagging_db

# PostgreSQL Environment Variables for docker-compose
POSTGRES_DB=image_tagging_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Connection pool settings
CONN_MAX_AGE=600

# ============================================
# CORS & CSRF Settings
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:80,http://localhost:3000,http://localhost:5173,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:80,http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ============================================
# Security Settings (Production)
# ============================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:8000

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=80
BACKEND_PORT=8000

# ============================================
# AI/ML Services - OpenRouter
# ============================================
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_SITE_URL=https://yourdomain.com
OPENROUTER_SITE_TITLE=Image Tagging Service
REQUEST_TIMEOUT=120

# ============================================
# Optional: SerpAPI (for advanced_reasoning mode)
# ============================================
# SERPAPI_API_KEY=your-serpapi-api-key-here

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Docker Deployment Settings
# ============================================
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=latest
